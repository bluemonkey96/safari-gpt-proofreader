{
  "manifest_version": 2,
  "name": "ProofreadGPT",
  "version": "1.0",
  "description": "A Safari extension that proofreads selected text using GPT.",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
