{
  "manifest_version": 2,
  "name": "GPT Proofreader",
  "description": "Right-click to proofread selected text with GPT",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",  // Reference to your options page
    "open_in_tab": false      // Settings will open in a popup (set true for a new tab)
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
